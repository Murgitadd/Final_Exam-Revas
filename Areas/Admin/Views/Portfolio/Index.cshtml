@using Revas.Areas.Admin.ViewModels;
@using Revas.Models;
@model PaginationVM<Portfolio>
<div class="content-wrapper">

    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Striped Table</h4>
                        <a asp-action="Create" class="btn btn-inverse-dark btn-fw">Create</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                <img src="~/assets/img/@item.Image" alt="image">
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-inverse-dark btn-fw">Update</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-inverse-dark btn-fw">Delete</a>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>